<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mulai Ambil Gambar"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/getPicture1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="0.33"
                    android:onClick="chooseImage1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_photo_camera_black_24dp" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="0.33"
                    android:id="@+id/getPicture2"
                    android:onClick="chooseImage2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_photo_camera_black_24dp"/>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="0.33"
                    android:scaleType="fitCenter"
                    android:id="@+id/getPicture3"
                    android:onClick="chooseImage3"
                    android:src="@drawable/ic_photo_camera_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="0.33"
                    android:id="@+id/getPicture4"
                    android:onClick="chooseImage4"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_photo_camera_black_24dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="0.33"
                    android:id="@+id/getPicture5"
                    android:onClick="chooseImage5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_photo_camera_black_24dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="0.33"
                    android:id="@+id/getPicture6"
                    android:onClick="chooseImage6"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_photo_camera_black_24dp"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:id="@+id/saveImage"
                android:onClick="stitchImage"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opencvImg"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>